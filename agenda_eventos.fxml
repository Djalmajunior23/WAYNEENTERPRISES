<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wayne.wayneen.enterpriseswyne.controller.AgendaEventosController"
            prefWidth="800" prefHeight="600">

    <children>
        <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label text="Agenda de Eventos" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region fx:id="espaco" HBox.hgrow="ALWAYS" />
                <Button text="Novo Evento" onAction="#abrirDialogoCadastrarEvento" />
            </HBox>

            <TableView fx:id="tabelaEventos" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
                    <TableColumn fx:id="colData" text="Data" prefWidth="150"/>
                    <TableColumn fx:id="colLocal" text="Local" prefWidth="150"/>
                    <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
