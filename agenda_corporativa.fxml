<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wayne.wayneen.enterpriseswyne.controller.AgendaCorporativaController">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Cadastro de Evento Corporativo"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="80"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>

                <children>
                    <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="txtDescricao" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Data:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="dpDataEvento" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtTipo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Local:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtLocal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Responsável:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtResponsavel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="10">
                <Button text="Salvar" onAction="#salvarEvento"/>
                <Button text="Excluir Selecionado" onAction="#excluirSelecionado"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tabela">
            <columns>
                <TableColumn text="Título" fx:id="colTitulo"/>
                <TableColumn text="Data" fx:id="colData"/>
                <TableColumn text="Tipo" fx:id="colTipo"/>
                <TableColumn text="Local" fx:id="colLocal"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
